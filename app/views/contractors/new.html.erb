<h1>Enroll your contractor and review their work</h1>
<%= form_tag '/contractors', method: :post do  %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :web_site %>
    <%= text_field_tag :web_site %>
  </div>
  <%= submit_tag "Submit" %>
<% end %>
