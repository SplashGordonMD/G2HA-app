<h1>Review the Contractors work</h1>
<%= form_tag '/reviews', method: :post do  %>
  <div>
    <%= hidden_field_tag :user_id, current_user.id %>
  </div>
  <div>
    <%= label_tag :contractor_id %>
    <%= select_tag(:contractor_id, options_from_collection_for_select(Contractor.order(:name), :id, :name, @review.contractor_id), {:prompt => 'Select a Contractor'} ) %>
  </div>
  <div>
    <%= label_tag :text %>
    <%= text_field_tag :text %>
  </div>
  <div>
    <%= label_tag :stars, "How many stars (5 is highly recommended, 1 never again):" %>
    <input id="input-id" name="stars" type="text" class="rating" data-size="lg" >
  </div>
  <div>
    <%= label_tag :job_category_id %>
    <%= select_tag(:job_category_id, options_from_collection_for_select(JobCategory.order(:name), :id, :name, @review.job_category_id), {:prompt => 'Select a Category'} ) %>
  </div>
  <%= submit_tag "Submit" %>
  </div>
<% end %>

<script>
 
  $("#input-id").rating();

  // with plugin options (do not attach the CSS class "rating" to your input if using this approach)
  $("#input-id").rating({'size':'lg'});
</script>